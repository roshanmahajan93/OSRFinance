<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chetu.osrfinance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.CustomerDetailActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.SearchListActivity" />
        <activity android:name=".Activity.CustomerFinanceDetailActivity" />
        <activity android:name=".Activity.DailyCustomerFinanceEntryActivity" />
        <activity
            android:name=".Activity.TwoDaysAndFiftyDaysReportActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape" />
        <activity android:name=".Activity.DeleteCustomerDetailActivity" />
        <activity android:name=".Activity.DailyEntryReportActivity" />
        <activity android:name=".Activity.DeleteCustomerLastRecordActivity"></activity>
    </application>

</manifest>